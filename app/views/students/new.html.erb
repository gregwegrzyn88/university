<% if @student.errors.any? %>
  <%= pluralize(@student.errors.count, "error")%>
    prohibited your profile from being created
  <ul>
  <% @student.errors.full_messages.each do |message|%>
  <li>
    <%= message %>
  </li>
  <%end%>
  </ul>
<%end%>

<div class = "container">
  <div class = "row center sign-up-form">
    <div class= "col s12 m12 l12">
      <div class = "card-panel">
        <h3 class="header"> Sign Up</h3>
        <div class= "row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>
          <div calss ="row">
            <div class = "input-field col s12">
              <%= f.text_field :name, placeholder: "Enter Full Name", autofocus: true %>
              <%= f.label :name %>
            </div>
          </div>
          <div calss ="row">
            <div class = "input-field col s12">
              <%= f.email_field :email, placeholder: "Enter Email", autofocus: true %>
              <%= f.label :email%>
            </div>
          </div>
          <div calss ="row">
            <div class = "input-field col s12">
              <%= f.text_field :password, placeholder: "Password", autofocus: true %>
              <%= f.label :name %>
            </div>
          </div>
            <div calss ="row">
              <div class = "input-field col s12">
              <%= f.submit "Sign Up", class: "btn orange waves-effect waves-light right" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
  